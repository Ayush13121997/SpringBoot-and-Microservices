package in.SpringLearning.geneartor;

import java.io.Serializable;
import java.sql.PreparedStatement;
import java.sql.ResultSet;

import org.hibernate.Session;
import org.hibernate.engine.spi.SharedSessionContractImplementor;
import org.hibernate.id.IdentifierGenerator;

/**
 * Custom ID Generator that generates IDs in the format "OD1", "OD2", "OD3",
 * etc.
 */

public class OrderIdGenerator implements IdentifierGenerator {

	private static final String PREFIX = "OD";
	
	private static String SUFFIX = "";

	@Override
	public Serializable generate(SharedSessionContractImplementor session, Object object) {

		Session hibernateSession = (Session) session;
		
		 // Use a transaction to safely update and retrieve the last value
        hibernateSession.doWork(connection -> {
            try (PreparedStatement ps = connection.prepareStatement("SELECT last_value FROM id_generator WHERE id = 'order_id' FOR UPDATE")) {
                ResultSet rs = ps.executeQuery();
                if (rs.next()) {
                    int lastValue = rs.getInt("last_value");
                    int newValue = lastValue + 1;
                    // Update the last_value in the database
                    try (PreparedStatement updatePs = connection.prepareStatement("UPDATE id_generator SET last_value = ? WHERE id = 'order_id'")) {
                        updatePs.setInt(1, newValue);
                        updatePs.executeUpdate();
                    }
                    // Return the new ID
           		    SUFFIX = String.valueOf(newValue);
                }
            } catch (Exception e) {
                e.printStackTrace();
            }
        });
		
		return PREFIX + SUFFIX;

		
		

//		JdbcConnectionAccess jdbcConnectionAccess = session.getJdbcConnectionAccess();
